<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/grid_card_size"
    android:layout_height="@dimen/grid_card_size">

    <FrameLayout
        android:id="@+id/fl_grid_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="@drawable/rv_item_selector">

        <include layout="@layout/large_image_gradient" />

        <TextView
            android:id="@+id/tv_musician_title"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:layout_gravity="bottom"
            android:textColor="@android:color/white"
            style="@style/TextView.Title"/>

    </FrameLayout>
</android.support.v7.widget.CardView>
